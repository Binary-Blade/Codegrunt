import os
from core_utils.path_manager import PathManager, DirectoryManager


class ExerciseFileHandler:
    def __init__(self, directory: str, language: str):
        self.directory = directory
        self.language = language

    def generate_file_path(self, extension: str) -> str:
        return PathManager.generate_file_path(self.directory, self.language, extension)

    def write_to_file(self, file_path: str, content: str) -> str:
        if not content:
            return None
        with open(file_path, "w") as generated_file:
            generated_file.write(content)
        print(f"File '{file_path}' generated successfully in '{
              os.path.dirname(file_path)}'.")
        return file_path

    @staticmethod
    def create_directory_if_not_exists(directory: str):
        DirectoryManager.create_directory(directory)
